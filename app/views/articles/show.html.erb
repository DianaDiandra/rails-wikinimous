<div class="container">
  <h2><%= @article.title %></h2>
  <p><%= @article.content %></p>
  <%= link_to edit_article_path(@article) do %><i class="fa-regular fa-pen-to-square"></i><% end %>
  <%= link_to "Back", articles_path %>
  <%= link_to article_path(@article), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "text-danger ms-2", title: "Delete" do %>
    <i class="fa-regular fa-trash-can"></i>
  <% end %>
</div>
